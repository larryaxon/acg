@model CCIWebClient.Models.QuoteTotalsModel
<table id="DealerSummaryTable">
    <tr>
        <th>
            MRC
        </th>
        <th>
            NRC
        </th>
        <th>
        </th>
    </tr>
    @for (int i = 0; i < Model.DealerSummary.Count; i++)
    {
        <tr>
            <td>
                <span class="re-charge">@{if (Model.DealerSummary[i].TotalMonthly != "$0.00")
                                          {@Model.DealerSummary[i].TotalMonthly}
                                        }
                </span>
            </td>
            <td>
                <span class="re-charge">@{if (Model.DealerSummary[i].TotalOneTime != "$0.00")
                                          {@Model.DealerSummary[i].TotalOneTime}
                                        }
                </span>
            </td>
            <td>
                <span class="qs-sum-title>">@Model.DealerSummary[i].ScreenSection
                </span>
            </td>
        </tr>
                }
</table>
